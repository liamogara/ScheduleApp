<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScheduleApp.EventPage"
             Title="EventPage">
    <VerticalStackLayout
        Padding="100"
        Spacing="25">

        <VerticalStackLayout
            x:Name="EventArea"
            Spacing="10">

            <Label 
                x:Name="MainLabel"
                Text="Enter your event details:"
                TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="80"/>

            <Entry 
                x:Name="EventNameEntry"
                Placeholder="Name"
                TextColor="Black"
                HorizontalOptions="Center"
                BackgroundColor="White"
                FontSize="30"/>
            <Entry 
                x:Name="EventLocationEntry"
                Placeholder="Location"
                TextColor="Black"
                HorizontalOptions="Center"
                BackgroundColor="White"
                FontSize="30"/>
            <Label 
                x:Name="StartDateLabel"
                Text="Start Date:"
                TextColor="Black"
                HorizontalOptions="Center"
                BackgroundColor="White"
                FontSize="25"/>
            <DatePicker
                x:Name="StartDatePicker"
                HorizontalOptions="Center"/>
            <Label
                x:Name="EndDateLabel"
                Text="End Date:"
                TextColor="Black"
                HorizontalOptions="Center"
                BackgroundColor="White"
                FontSize="25"/>
            <DatePicker
                x:Name="EndDatePicker"
                HorizontalOptions="Center"/>

                <Button 
                x:Name="SubmitAnswer"
                Text="Submit"
                TextColor="Black"
                Clicked="OnEventSubmitted"
                HorizontalOptions="Center"
                BackgroundColor="DarkOliveGreen"
                FontSize="35"/>

            <Label
                x:Name="AnswerLabel"
                TextColor="Black"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontSize="32"/>

        </VerticalStackLayout>

        <Label
            x:Name="EventSubmittedLabel"
            TextColor="Black"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="50"/>
        
        <Button 
            x:Name="BackToMenuButton"
            Text="Back To Menu"
            TextColor="Black"
            Clicked="OnBackToMenu"
            HorizontalOptions="Center"
            BackgroundColor="DarkOliveGreen"
            FontSize="32"
            IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>