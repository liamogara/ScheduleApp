<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScheduleApp.MainPage">

    <ContentView>
        <VerticalStackLayout
        Spacing="25"
        Padding="50"
        >
            <Label Text = "My Schedule"
               TextColor="White"
               FontSize="50"
               HorizontalOptions="Center"/>

            <Grid RowDefinitions ="*, 150" 
              ColumnDefinitions="*,*,*,*">

                <Button Grid.Column="0"
                        Grid.ColumnSpan="4"
                        Text="View Schedule"
                        TextColor="Black"
                        BackgroundColor="DarkOliveGreen"
                        Clicked="OnViewScheduleChosen"
                        MaximumWidthRequest="600"
                        FontSize="60"></Button>
                <Button Grid.Row="1" 
                        Grid.ColumnSpan="4" 
                        BackgroundColor="DarkOliveGreen" 
                        Text="Add Event"
                        TextColor="Black"
                        Clicked="OnAddEventChosen"
                        MaximumWidthRequest="400"
                        MaximumHeightRequest="70"
                        FontSize="32"></Button>
            </Grid>
        </VerticalStackLayout>
    </ContentView>

</ContentPage>
