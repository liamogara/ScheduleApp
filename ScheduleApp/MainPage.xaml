<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScheduleApp.MainPage">

    <ContentView>
        <VerticalStackLayout
        Spacing="25"
        Padding="50"
        >
            <Label Text = "My Schedule"
               
               FontSize="100"
               HorizontalOptions="Center"
               Margin="50"/>

            <Grid RowDefinitions ="*, *" 
              ColumnDefinitions="*"
              RowSpacing="25">

                <Button Grid.Row="0"
                        Text="View Schedule"
                        
                        Clicked="OnViewScheduleChosen"
                        MaximumWidthRequest="600"
                        MaximumHeightRequest="100"
                        FontSize="50"></Button>
                <Button Grid.Row="1"
                        Text="View Event List"
                        
                        Clicked="OnViewEventListChosen"
                        MaximumWidthRequest="600"
                        MaximumHeightRequest="100"
                        FontSize="40"></Button>
            </Grid>
        </VerticalStackLayout>
    </ContentView>

</ContentPage>
